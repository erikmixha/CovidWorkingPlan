@model CovidWorkingPlan.Models.WorkingToday

@{
    ViewData["Title"] = "Edit work date";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit work date</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        @if (@ViewData["ErrorMsg"] != null)
        {

            <span id="errormsg" class="text-danger">@ViewData["ErrorMsg"].ToString()</span>

        }
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdemployeeNavigation.EmpCode" class="control-label">Employee Code</label>
                <input asp-for="IdemployeeNavigation.EmpCode" class="form-control" onkeyup="this.value=this.value.replace(/[^\d]/,'')" autocomplete="off" min="1" maxlength="10" />
                <span asp-validation-for="IdemployeeNavigation.EmpCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkDate" class="control-label">Date</label>
                <input type="date" asp-for="WorkDate" class="form-control" autocomplete="off" />
                <span asp-validation-for="WorkDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
